
.content {
	box-sizing: border-box;
}
.area {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.area-bg {
	width: 700rpx;
	height: 200rpx;
	background-color: rgb(65, 222, 152);
}
.area-textBox {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
	align-items: center;
}
.area-text {
	margin-top: 20px;
	text-align: center;
	color: #000;
	font-size: 28rpx;
	-webkit-user-select: none;
	        user-select: none;
	cursor: pointer;
	padding: 10rpx 30rpx;
	border-radius: 30px;
	background-color: aquamarine;
}

